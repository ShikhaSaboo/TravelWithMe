<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="2dp"
    android:layout_marginBottom="5dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="2dp"
    card_view:contentPaddingTop="5dp"
    card_view:contentPaddingBottom="5dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="2dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:id="@+id/service_header_image"
            android:paddingBottom="5dp"/>
        <ImageView
            android:id="@+id/btn_expand_toggle"
            android:src="@drawable/circle_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/service_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "World Heritage Sites"
            android:textSize="17dp"
            android:textColor="#000000"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:layout_toRightOf="@id/service_header_image"
            android:layout_toLeftOf="@id/btn_expand_toggle"
            />


        <!--<ImageView-->
        <!--android:id="@+id/btn_expand_toggle"-->
        <!--android:src="@drawable/circle_plus"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_weight="0"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginTop="10dp"/>-->
    </RelativeLayout>
</android.support.v7.widget.CardView>
