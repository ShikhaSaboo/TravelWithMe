<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#FFDAB9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/amuseImage"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/amuseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AmuseName"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/amuseAddress"
            android:layout_alignStart="@+id/amuseAddress"
            />

        <TextView
            android:id="@+id/amuseAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amuseName"
            android:text="Amuse Address"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginTop="5dp"

            android:layout_toRightOf="@id/amuseImage"
            />

        <TextView
        android:id="@+id/amusePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amuseAddress"
        android:text="Phone Phone"
        android:textColor="#424242"
        android:textSize="12sp"
        android:layout_marginTop="5dp"

        android:layout_toRightOf="@id/amuseImage"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/amusePhone"
            android:id="@+id/AmuseLinearOpeningTime">
            <TextView
                android:id="@+id/amuseOpeningTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opening Time: "
                android:textColor="#424242"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                />


            <TextView
                android:id="@+id/amuseOpening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/amusePhone"
                android:text="Amuse OpeningTime"
                android:textColor="#424242"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/AmuseLinearOpeningTime"
            android:id="@+id/AmuseLinearFee">


        <TextView
            android:id="@+id/amuseEntranceFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrance Fee: "
            android:textColor="#424242"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            />

            <TextView
                android:id="@+id/amuseFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amuse Fee"
                android:textColor="#424242"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                />
</LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="See in Map"
            android:id="@+id/amusementMap"
            android:textColor="#ffffff"
            android:background="#461B7E"

            android:gravity="center"
            android:layout_below="@id/AmuseLinearFee"
            style="@style/Base.Widget.AppCompat.Button.Small"
            android:singleLine="false"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="100dp"

            />


    </RelativeLayout>

</android.support.v7.widget.CardView>