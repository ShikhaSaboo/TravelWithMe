<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="2dp"
    card_view:cardUseCompatPadding="true"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/phrasebookk"
            android:paddingLeft="3dp"
            android:layout_alignParentLeft="true"

            android:paddingBottom="10dp"
            android:id="@+id/phrase_icon"
            />
        <TextView
            android:id="@+id/phrasetype_itemfirst"
            android:layout_width="match_parent"
            android:layout_height = "wrap_content"
            android:textColor="@android:color/black"
            android:text="PhraseBook"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/phrase_icon"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            />

        <TextView
            android:id="@+id/phrasetype_itemsecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text = "Namaste"
            android:textSize="16dp"
            android:textColor="#257985"
            android:layout_below="@+id/phrasetype_itemfirst"

            android:layout_toRightOf="@+id/phrase_icon"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            />

        <TextView
            android:id="@+id/phrasetype_itemthird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text = "नमस्त"
            android:textSize="15sp"
            android:textColor="#74828f"
            android:layout_below="@+id/phrasetype_itemsecond"

            android:layout_toRightOf="@+id/phrase_icon"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            />







    </RelativeLayout>






</android.support.v7.widget.CardView>
