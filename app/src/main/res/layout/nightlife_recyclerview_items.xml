        <TextView
            android:id="@+id/nightName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NightName"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignLeft="@+id/nightAddress"
            android:layout_alignStart="@+id/nightAddress"
            />

        <TextView
            android:id="@+id/nightAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nightName"
            android:text="Night Address"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignLeft="@+id/nightPhone"
            android:layout_alignStart="@+id/nightPhone"
            />

        <TextView
            android:id="@+id/nightPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nightAddress"
            android:text="Night Phone"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/nightImage"
            />

