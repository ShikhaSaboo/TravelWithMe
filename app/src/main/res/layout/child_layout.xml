<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="70dp"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="2dp"
    android:layout_marginLeft="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="4dp"

    card_view:cardBackgroundColor="#000f44"
    card_view:theme="@style/AlertDialog.AppCompat.Light"
    android:clickable="true"
    android:background="@color/abc_search_url_text_normal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/kathmandu_icon"
            android:layout_alignParentLeft="true"

            android:paddingBottom="1dp"
            android:id="@+id/child_image"
            />

        <TextView
            android:id="@+id/child_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/child_image"
            android:text = "Sight Seeing"
            android:textSize="19dp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            />






    </RelativeLayout>






</android.support.v7.widget.CardView>
