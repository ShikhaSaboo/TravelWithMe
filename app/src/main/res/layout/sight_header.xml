<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="80dp"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="2dp"
    card_view:contentPaddingTop="5dp"
    card_view:cardUseCompatPadding="true"
    android:clickable="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:id="@+id/sight_header_image"
            android:src="@drawable/international"

            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/sight_header_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "World Heritage Sites"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:layout_toRightOf="@id/sight_header_image"/>

        <ImageView
            android:id="@+id/btn_expand_toggle"
            android:src="@drawable/circle_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>







    </RelativeLayout>






</android.support.v7.widget.CardView>
