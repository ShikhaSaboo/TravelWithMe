<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#E5E4E2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/hikeImage"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/hikeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hikeImage"
            android:text="HikeName"
            android:textColor="#cd5c5c"
            android:textSize="20sp"
            android:layout_marginTop="5dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hikeName"
            android:orientation="horizontal"
            android:id="@+id/hikeStartEnd">

        <TextView
            android:id="@+id/hikeStartEndLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start/End: "
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/hikeStartEndData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hike Start End"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/hikeDuration"
    android:orientation="horizontal"
    android:layout_below="@+id/hikeStartEnd">

        <TextView
        android:id="@+id/hikeDurationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: "
        android:textColor="#424242"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        />

        <TextView
            android:id="@+id/hikeDurationData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hike Duration"
            android:textColor="#424242"
            android:textSize="12sp"
            android:layout_marginTop="5dp" />
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hikeAltitude"
            android:orientation="horizontal"
            android:layout_below="@+id/hikeDuration">

            <TextView
                android:id="@+id/hikeAltitudeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altitude: "
                android:textColor="#424242"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/hikeAltitudeData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hike Altitude"
                android:textColor="#424242"
                android:textSize="12sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hikeTime"
            android:orientation="horizontal"
            android:layout_below="@+id/hikeAltitude">

            <TextView
                android:id="@+id/hikeTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: "
                android:textColor="#424242"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/hikeTimeData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hike Time"
                android:textColor="#424242"
                android:textSize="12sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hikePrice"
            android:orientation="horizontal"
            android:layout_below="@+id/hikeTime">

            <TextView
                android:id="@+id/hikePriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:textColor="#424242"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/hikePriceData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hike Duration"
                android:textColor="#424242"
                android:textSize="12sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hikeHighlights"
            android:orientation="horizontal"
            android:layout_below="@+id/hikePrice">

            <TextView
                android:id="@+id/hikeHighlightsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highlights: "
                android:textColor="#424242"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/hikeHighlightsData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hike Highlights"
                android:textColor="#424242"
                android:textSize="12sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>


        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="See in Map"
            android:id="@+id/hikeMap"
            android:textColor="#ffffff"
            android:background="#8e4585"

            android:gravity="center"
            android:layout_below="@id/hikeHighlights"
            style="@style/Base.Widget.AppCompat.Button.Small"
            android:singleLine="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="100dp"

            />


    </RelativeLayout>

</android.support.v7.widget.CardView>